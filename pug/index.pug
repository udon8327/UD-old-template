extends _layout.pug

block var
	-var url = ''
	-var link = 'html/'

block title
	title 首頁

block css
	link(rel='stylesheet' href='css/index.css?v=1')

block js
	script(src="plugins/jquery-validate-1.19.0/jquery.validate.min.js")
	script(src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js")

//---------------------------內容區Start---------------------------
block content
	
	//-popup
	#popup.d-none
		form#formValidate.popup(name="popup" action="" method="post")
			.popupContent.text-center.animated.bounceIn
				i.fas.fa-times.popupClose(onclick='popupClose($(this))')
				h5.font-weight-bold Popup Title
				p Popup Text

				.form-group.row.justify-content-start.text-left
					.col-8.text-right
						label.col-form-label.font-weight-bold(for='name') Name：
					.col-14
						input#name.form-control(type="text" name="name" placeholder='請輸入姓名')

				.form-group.row.justify-content-start.text-left
					.col-8.text-right
						label.col-form-label.font-weight-bold(for='mobile') Phone：
					.col-14
						input#mobile.form-control(type="tel" name="mobile" placeholder='請輸入手機號碼')

				.form-group.row.justify-content-start.text-left
					.col-8.text-right
						label.col-form-label.font-weight-bold(for='email') Email：
					.col-14
						input#email.form-control(type="email" name="email" placeholder='請輸入Email')

				.form-group.row.justify-content-start.text-left
					.col-8.text-right
						label.col-form-label.font-weight-bold(for='select') Select：
					.col-14
						select#select.form-control(type="select" name="select")
							option(value="select_A") select_A
							option(value="select_B") select_B

				.form-group.row.justify-content-start.text-left
					.col-8.text-right
						label.col-form-label.font-weight-bold(for='file') File：
					.col-14
						.custom-file
							input#file.custom-file-input(type='file' name="file")
							label.custom-file-label(for='customFile') 選擇檔案

				.form-group.row.justify-content-start.text-left
					.col-8.text-right
						label.col-form-label.font-weight-bold(for='textarea') Textarea：
					.col-14
						textarea#textarea.form-control(rows='2')

				.form-group.row.justify-content-start.align-items-center.text-left
					.col-8.text-right
						label.col-form-label.font-weight-bold(for='checkbox_A') Checkbox：
					.col-14
						.custom-control.custom-checkbox.custom-control-inline
							input#checkbox_A.custom-control-input(type='checkbox' name="checkbox" value='checkbox_A' checked)
							label.custom-control-label(for='checkbox_A') checkbox_A
						.custom-control.custom-checkbox.custom-control-inline
							input#checkbox_B.custom-control-input(type='checkbox' name="checkbox" value='checkbox_B')
							label.custom-control-label(for='checkbox_B') checkbox_B

				.form-group.row.justify-content-start.align-items-center.text-left
					.col-8.text-right
						label.col-form-label.font-weight-bold(for='radio_A') Radios：
					.col-14
						.custom-control.custom-radio.custom-control-inline
							input#radio_A.custom-control-input(type='radio' name='radio' value='radio_A' checked)
							label.custom-control-label(for='radio_A') radio_A
						.custom-control.custom-radio.custom-control-inline
							input#radio_B.custom-control-input(type='radio' name='radio' value='radio_B')
							label.custom-control-label(for='radio_B') radio_B

				button.confirm(type='submit' name='confirm') 確定
				button.cancel(type='reset' name='cancel' onclick='popupClose($(this))') 取消
			.popupBg

	//-main
	main
		.container.bc-1
			button.btn.btn-primary(type="button" onclick='popupOpen()') TEST

		//-popup


//---------------------------內容區End---------------------------